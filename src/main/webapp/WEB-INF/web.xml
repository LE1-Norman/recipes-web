<?xml version="1.0" encoding="UTF-8"?>
<web-app
    version="4.0"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:javaee="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xml="http://www.w3.org/XML/1998/namespace"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

  <display-name>Рецепты русской кухни</display-name>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <!-- ============================================ -->
  <!-- ОСНОВНАЯ ЗАЩИТА ВСЕХ СТРАНИЦ -->
  <!-- ============================================ -->

  <!-- Защита всех страниц по умолчанию -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Все защищенные страницы</web-resource-name>
      <url-pattern>/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
      <role-name>chef</role-name>
      <role-name>user</role-name>
      <role-name>guest</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Исключения - публичные страницы -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Публичные страницы</web-resource-name>
      <url-pattern>/index.html</url-pattern>
      <url-pattern>/login/*</url-pattern>
      <url-pattern>/errors/*</url-pattern>
      <url-pattern>/css/*</url-pattern>
      <url-pattern>/js/*</url-pattern>
      <url-pattern>/images/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <!-- auth-constraint отсутствует = публичный доступ -->
  </security-constraint>

  <!-- ============================================ -->
  <!-- ДОПОЛНИТЕЛЬНЫЕ ПРАВА ДОСТУПА -->
  <!-- ============================================ -->

  <!-- Форма добавления рецепта - только шеф и админ -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Добавление рецептов</web-resource-name>
      <url-pattern>/forms/add-recipe.jsp</url-pattern>
      <url-pattern>/forms/add-recipe-action.jsp</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
      <role-name>chef</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- Административные функции - только админ -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Админ панель</web-resource-name>
      <url-pattern>/admin/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- ============================================ -->
  <!-- ДОСТУП К НАСТРОЙКАМ ПОЛЬЗОВАТЕЛЯ -->
  <!-- ============================================ -->

  <!-- Доступ к настройкам пользователя -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>User Preferences</web-resource-name>
      <url-pattern>/user/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
      <role-name>chef</role-name>
      <role-name>user</role-name>
      <role-name>guest</role-name>
    </auth-constraint>
  </security-constraint>

  <!-- ============================================ -->
  <!-- НАСТРОЙКА АУТЕНТИФИКАЦИИ -->
  <!-- ============================================ -->

  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/login/login-form.jsp</form-login-page>
      <form-error-page>/login/login-form.jsp?error=true</form-error-page>
    </form-login-config>
  </login-config>

  <!-- Объявление ролей -->
  <security-role>
    <role-name>admin</role-name>
  </security-role>
  <security-role>
    <role-name>chef</role-name>
  </security-role>
  <security-role>
    <role-name>user</role-name>
  </security-role>
  <security-role>
    <role-name>guest</role-name>
  </security-role>

  <!-- ============================================ -->
  <!-- ОБРАБОТКА ОШИБОК -->
  <!-- ============================================ -->

  <error-page>
    <error-code>404</error-code>
    <location>/errors/error-handler.jsp</location>
  </error-page>
  
  <error-page>
    <error-code>500</error-code>
    <location>/errors/error-handler.jsp</location>
  </error-page>

  <error-page>
    <error-code>403</error-code>
    <location>/errors/access-denied.jsp</location>
  </error-page>

  <!-- ============================================ -->
  <!-- НАСТРОЙКИ JSP -->
  <!-- ============================================ -->

  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>

</web-app>